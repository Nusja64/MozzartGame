<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.view.activity.MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_view_margin"
        android:padding="@dimen/text_view_padding"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_view_size"
        android:background="@color/dark_silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewSeparatorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_separator_height"
        android:layout_margin="@dimen/text_view_margin"
        android:padding="@dimen/text_view_padding"
        android:background="@color/blue_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewMainTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_view_margin"
        android:padding="@dimen/text_view_padding"
        android:text="@string/time_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_view_size"
        android:background="@color/dark_silver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewMainTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_view_margin"
        android:padding="@dimen/text_view_padding"
        android:text="@string/timer_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_view_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/dark_silver"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDraws"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainTimer"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_draw" />


</androidx.constraintlayout.widget.ConstraintLayout>


